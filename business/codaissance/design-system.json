    "gradients": [
      {
        "name": "Primary Gradient (Horizontal)",
        "css": "linear-gradient(90deg, #F37221, #FED700)",
        "usage": "Headlines, CTAs, primary accent text"
      },
      {
        "name": "Primary Gradient (Vertical)",
        "css": "linear-gradient(180deg, #F37221, #FED700)",
        "usage": "Vertical elements, decorative"
      },
      {
        "name": "Conic Glow",
        "css": "conic-gradient(from var(--rotation-angle), transparent 80%, #F37221, #FED700)",
        "usage": "Animated card borders, special effects"
      },
      {
        "name": "Blue Text Gradient",
        "css": "linear-gradient(180deg, rgb(177, 221, 248) 60%, #cbd5e1)",
        "usage": "Subtle text emphasis, card list items"
      }
    ]
  },
  "typography": {
    "font_families": {
      "brand": {
        "name": "Oxanium",
        "fallback": "system-ui, -apple-system, sans-serif",
        "source": "Google Fonts",
        "usage": "Brand name 'Codaissance', logos, wordmarks"
      },
      "headings": {
        "name": "Cinzel",
        "fallback": "Georgia, serif",
        "source": "Google Fonts",
        "usage": "Subheadings, section titles, emphasis text"
      },
      "body": {
        "name": "Source Sans 3",
        "fallback": "system-ui, -apple-system, sans-serif",
        "source": "Google Fonts",
        "usage": "Body text, paragraphs, UI elements"
      },
      "code": {
        "name": "JetBrains Mono",
        "fallback": "Fira Code, Consolas, monospace",
        "source": "Google Fonts",
        "notes": "For code snippets and technical content"
      }
    },
    "scale_system": {
      "ratio": 1.618,
      "note": "Golden ratio (φ) - divide by 1.618 to get next size down, multiply to get next size up"
    },
    "scale": {
      "display": { "size": "4.236rem", "weight": "700", "line_height": "1.1", "font": "Cinzel", "note": "Hero headlines (68px at base 16)" },
      "h1": { "size": "2.618rem", "weight": "700", "line_height": "1.1", "font": "Cinzel", "note": "Page titles (42px)" },
      "h2": { "size": "1.618rem", "weight": "600", "line_height": "1.2", "font": "Cinzel", "note": "Section headings (26px)" },
      "h3": { "size": "1.25rem", "weight": "600", "line_height": "1.3", "font": "Cinzel", "note": "Subsection headings (20px)" },
      "h4": { "size": "1.125rem", "weight": "600", "line_height": "1.4", "font": "Source Sans 3", "note": "Card titles (18px)" },
      "body_lg": { "size": "1.125rem", "weight": "400", "line_height": "1.618", "font": "Source Sans 3", "note": "Lead paragraphs (18px)" },
      "body": { "size": "1rem", "weight": "400", "line_height": "1.618", "font": "Source Sans 3", "note": "Body text (16px base)" },
      "small": { "size": "0.875rem", "weight": "400", "line_height": "1.5", "font": "Source Sans 3", "note": "Supporting text (14px)" },
      "caption": { "size": "0.618rem", "weight": "400", "line_height": "1.4", "font": "Source Sans 3", "note": "Captions, labels (10px)" }
    }
  },
  "spacing": {
    "unit": "rem",
    "note": "Golden ratio based spacing scale",
    "scale": {
      "3xs": "0.236rem",
      "2xs": "0.382rem",
      "xs": "0.618rem",
      "sm": "1rem",
      "md": "1.618rem",
      "lg": "2.618rem",
      "xl": "4.236rem",
      "2xl": "6.854rem",
      "3xl": "11.09rem"
    }
  },
  "borders": {
    "note": "Generous rounding for soft, approachable feel",
    "radius": {
      "none": "0",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "2.5rem",
      "3xl": "3rem",
      "full": "9999px"
    },
    "default_radius": "1rem",
    "button_radius": "0.5rem",
    "card_radius": "1.5rem",
    "modal_radius": "2rem",
    "width": {
      "thin": "1px",
      "medium": "2px",
      "thick": "4px"
    },
    "accent_border": {
      "color": "rgba(243, 114, 33, 0.5)",
      "tailwind": "border-orange-400/50",
      "usage": "Section dividers, card accents"
    },
    "glass_border": {
      "color": "rgba(255, 255, 255, 0.1)",
      "usage": "Glassmorphism card borders"
    }
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1)",
    "glow_orange": "0 0 20px rgba(243, 114, 33, 0.3)",
    "glow_gold": "0 0 20px rgba(254, 215, 0, 0.3)",
    "glow_blue": "0 0 20px rgba(68, 157, 214, 0.3)",
    "glass": "0 8px 32px 0 rgba(0, 0, 0, 0.37)"
  },
  "glassmorphism": {
    "note": "Frosted glass effect for cards, modals, and overlays. Core design language.",
    "card": {
      "background": "rgba(15, 23, 42, 0.6)",
      "backdrop_filter": "blur(16px)",
      "border": "1px solid rgba(255, 255, 255, 0.1)",
      "border_radius": "1.5rem",
      "shadow": "0 8px 32px 0 rgba(0, 0, 0, 0.37)",
      "css": "background: rgba(15, 23, 42, 0.6); backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 1.5rem;"
    },
    "card_hover": {
      "background": "rgba(15, 23, 42, 0.75)",
      "border": "1px solid rgba(243, 114, 33, 0.3)",
      "note": "Subtle orange border glow on hover"
    },
    "modal": {
      "background": "rgba(15, 23, 42, 0.8)",
      "backdrop_filter": "blur(24px)",
      "border": "1px solid rgba(255, 255, 255, 0.15)",
      "border_radius": "2rem"
    },
    "nav": {
      "background": "rgba(3, 7, 18, 0.8)",
      "backdrop_filter": "blur(12px)",
      "border_bottom": "1px solid rgba(255, 255, 255, 0.05)"
    },
    "button_secondary": {
      "background": "rgba(255, 255, 255, 0.05)",
      "backdrop_filter": "blur(8px)",
      "border": "1px solid rgba(255, 255, 255, 0.1)",
      "border_radius": "0.5rem"
    }
  },
  "animations": {
    "hover_float": {
      "name": "slow-hover",
      "duration": "5s",
      "description": "Gentle floating animation for elements"
    },
    "border_rotate": {
      "name": "rotate-angle",
      "duration": "4s",
      "description": "Rotating gradient border effect on cards"
    },
    "ticker_scroll": {
      "name": "scroll-left",
      "duration": "20s",
      "description": "Horizontal scrolling ticker animation"
    }
  },
  "logos": {
    "primary": {
      "path": "assets/Codaissance-logo-bare.svg",
      "usage": "Default logo"
    },
    "colors_in_logo": {
      "gold": "#FED700",
      "orange": "#F37221",
      "light_blue": "#449DD6",
      "deep_blue": "#3B56A6",
      "stroke": "#231F20"
    },
    "clear_space": "Minimum padding around logo equal to height of 'C' in wordmark",
    "minimum_size": "24px height for icon, 100px width for full logo"
  },
  "image_generation": {
    "social_posts": {
      "linkedin": {
        "dimensions": "1200x627",
        "safe_zone": "Keep text within center 80%",
        "style_notes": "Use dark background (#030712), gradient text for headlines"
      },
      "twitter": {
        "dimensions": "1200x675",
        "safe_zone": "Keep text within center 80%",
        "style_notes": "Eye-catching, orange/gold gradient accents"
      },
      "og_image": {
        "dimensions": "1200x630",
        "style_notes": "Clear title with gradient text, dark background, logo bottom-right"
      }
    },
    "style_guidelines": {
      "color_usage": "Deep space backgrounds (#030712) with warm orange/gold celestial accents. Blue for depth and secondary elements.",
      "photography": "Abstract space imagery, nebulae, star fields when needed",
      "illustrations": "Sacred geometry, geometric florals, mandala-inspired patterns",
      "icons": "Consistent stroke width, rounded corners, orange/gold gradient fills for emphasis",
      "patterns": [
        "Geometric floral/mandala patterns (like hero section decorations)",
        "Star field backgrounds",
        "Orbital line decorations",
        "Subtle gradient meshes suggesting nebulae"
      ],
      "avoid": [
        "Stock photos of people at computers",
        "Overly corporate imagery",
        "Cluttered compositions",
        "Harsh neon/cyberpunk aesthetics",
        "AI-generated faces",
        "Light/white backgrounds (dark space is core)",
        "Sharp corners (prefer rounded)",
        "Flat, solid surfaces (prefer glassmorphism)"
      ]
    },
    "text_on_images": {
      "max_words": "7-10 words for social images",
      "font_usage": "Use heading font for titles, apply gradient-text-horizontal for emphasis",
      "contrast": "Ensure WCAG AA contrast ratio minimum",
      "placement": "Left-aligned or centered, avoid edges"
    }
  },
  "website_design": {
    "layout": {
      "max_width": "1200px",
      "content_width": "720px",
      "grid_columns": 12,
      "gutter": "1.5rem"
    },
    "section_container": {
      "classes": "min-h-screen w-full px-4 rounded-4xl relative flex flex-col items-center gap-8 py-16 border-t border-b border-orange-400/50"
    },
    "components": {
      "buttons": {
        "primary": {
          "style": "Gradient background (orange to gold), dark text, rounded-md (0.5rem)",
          "css": "background: linear-gradient(90deg, #F37221, #FED700); color: #030712; border-radius: 0.5rem; font-weight: 600;"
        },
        "secondary": {
          "style": "Glassmorphism with subtle border, light text",
          "css": "background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(8px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 0.5rem;"
        },
        "ghost": "Text only with hover underline, orange accent on hover"
      },
      "cards": {
        "style": "Glassmorphism with generous rounding",
        "css": "background: rgba(15, 23, 42, 0.6); backdrop-filter: blur(16px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 1.5rem;",
        "hover": "border-color: rgba(243, 114, 33, 0.3); background: rgba(15, 23, 42, 0.75);",
        "border_effect": "Optional: Rotating conic gradient border with orange/gold for featured cards"
      },
      "inputs": {
        "style": "Glassmorphism input fields",
        "css": "background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 0.5rem;",
        "focus": "border-color: #F37221; box-shadow: 0 0 0 2px rgba(243, 114, 33, 0.2);"
      },
      "navigation": {
        "style": "Glassmorphism sticky nav",
        "css": "background: rgba(3, 7, 18, 0.8); backdrop-filter: blur(12px); border-bottom: 1px solid rgba(255, 255, 255, 0.05);"
      }
    },
    "dark_mode": {
      "supported": true,
      "default": "dark",
      "notes": "Dark mode is the primary theme. Light mode inverts to light backgrounds with dark text."
    }
  },
  "content_templates": {
    "blog_header": {
      "description": "Featured image for blog posts",
      "dimensions": "1200x630",
      "elements": ["Title with gradient text", "Category tag", "Logo watermark bottom-right"],
      "background": "#030712"
    },
    "product_screenshot": {
      "description": "App screenshots for marketing",
      "style": "Browser frame or device mockup, orange glow shadow",
      "background": "Gradient or solid dark with gradient accents"
    },
    "social_announcement": {
      "description": "New feature or launch announcements",
      "elements": ["Headline with gradient", "Key benefit", "Logo", "Orange accent line"],
      "background": "#030712"
    },
    "quote_card": {
      "description": "Testimonials or pull quotes",
      "elements": ["Quote text with blue gradient", "Attribution", "Subtle orange accent"],
      "background": "#0F172A"
    }
  },
  "design_theme": {
    "name": "Cosmic Renaissance",
    "concept": "Space meets classical elegance. Deep cosmic darkness with warm celestial accents—like stars and nebulae glowing against the void.",
    "core_principles": [
      "Glassmorphism as primary surface treatment",
      "Golden ratio proportions throughout",
      "Generous border radius for soft, inviting feel",
      "Deep space backgrounds with warm orange/gold celestial accents",
      "Elegant serif headings (Cinzel) contrast modern UI"
    ]
  },
  "brand_personality_in_design": {
    "keywords": [
      "Cosmic elegance",
      "Renaissance craftsmanship",
      "Space-age sophistication",
      "Warm celestial glow",
      "Artisan precision",
      "Timeless yet futuristic",
      "Developer-focused luxury"
    ],
    "mood": "The soul of an artist, the mind of an engineer. Deep cosmic backgrounds evoke infinite possibility. Warm orange and gold accents feel like distant stars and nebulae. Glassmorphism creates depth and dimension, like looking through spacecraft windows. Classical typography (Cinzel) grounds the futuristic aesthetic in timeless craftsmanship.",
    "inspiration": [
      "Deep space imagery and nebulae",
      "Renaissance art and golden ratio",
      "Spacecraft cockpit interfaces",
      "Luxury watchmaking",
      "Modern observatory architecture",
      "Sacred geometry patterns"
    ],
    "patterns": {
      "geometric_florals": "Geometric flower/mandala patterns (like on website) evoke sacred geometry and cosmic order",
      "star_fields": "Subtle animated star backgrounds for depth",
      "orbital_lines": "Thin curved lines suggesting planetary orbits",
      "gradient_meshes": "Soft color transitions suggesting nebulae"
    }
  }
}
