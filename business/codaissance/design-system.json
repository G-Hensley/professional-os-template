      },
      "headings": {
        "name": "Cinzel",
        "fallback": "Georgia, serif",
        "source": "Google Fonts",
        "usage": "Subheadings, section titles, emphasis text"
      },
      "body": {
        "name": "Source Sans 3",
        "fallback": "system-ui, -apple-system, sans-serif",
        "source": "Google Fonts",
        "usage": "Body text, paragraphs, UI elements"
      },
      "code": {
        "name": "JetBrains Mono",
        "fallback": "Fira Code, Consolas, monospace",
        "source": "Google Fonts",
