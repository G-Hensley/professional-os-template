  "borders": {
    "radius": {
      "none": "0",
      "sm": "0.382rem",
      "md": "0.618rem",
      "lg": "1rem",
      "xl": "1.618rem",
      "full": "9999px"
    },
    "width": {
      "thin": "1px",
      "medium": "2px",
      "thick": "3px"
    }
  },
  "shadows": {
    "note": "Shadows use neumorphic principles - soft, diffused edges for depth without harsh contrast",
    "sm": {
      "css": "0 2px 4px rgba(0, 0, 0, 0.3)",
      "usage": "Subtle elevation, small buttons"
    },
    "md": {
      "css": "0 4px 12px rgba(0, 0, 0, 0.4)",
      "usage": "Cards, dropdowns"
    },
    "lg": {
      "css": "0 8px 24px rgba(0, 0, 0, 0.5)",
      "usage": "Modals, popovers"
    },
    "xl": {
      "css": "0 16px 48px rgba(0, 0, 0, 0.6)",
      "usage": "Large overlays, hero elements"
    },
    "glow_teal": {
      "css": "0 0 20px rgba(46, 139, 139, 0.4)",
      "usage": "Active/focused teal buttons"
    },
    "glow_red": {
      "css": "0 0 20px rgba(211, 46, 32, 0.4)",
      "usage": "Warning/alert accents"
    },
    "inner": {
      "css": "inset 0 2px 4px rgba(0, 0, 0, 0.3)",
      "usage": "Pressed button states, input fields"
    },
    "neumorphic_raised": {
      "css": "6px 6px 12px rgba(0, 0, 0, 0.5), -6px -6px 12px rgba(255, 255, 255, 0.03)",
      "usage": "Raised neumorphic elements"
    },
    "neumorphic_pressed": {
      "css": "inset 4px 4px 8px rgba(0, 0, 0, 0.5), inset -4px -4px 8px rgba(255, 255, 255, 0.03)",
      "usage": "Pressed neumorphic elements"
    }
  },
  "effects": {
    "glassmorphism": {
      "description": "Frosted glass effect for cards and panels",
      "css": {
        "background": "rgba(30, 42, 56, 0.6)",
        "backdrop_filter": "blur(12px)",
        "border": "1px solid rgba(255, 255, 255, 0.08)",
        "border_radius": "1rem"
      },
      "tailwind": "bg-midnight/60 backdrop-blur-md border border-white/[0.08] rounded-lg"
    },
    "neumorphism": {
      "description": "Soft, extruded UI elements",
      "raised": {
        "background": "#1A1A1A",
        "box_shadow": "6px 6px 12px rgba(0, 0, 0, 0.5), -6px -6px 12px rgba(255, 255, 255, 0.03)"
      },
      "pressed": {
        "background": "#1A1A1A",
        "box_shadow": "inset 4px 4px 8px rgba(0, 0, 0, 0.5), inset -4px -4px 8px rgba(255, 255, 255, 0.03)"
      }
    },
    "transitions": {
      "fast": "150ms ease-out",
      "normal": "250ms ease-out",
      "slow": "400ms ease-out"
    }
  },
