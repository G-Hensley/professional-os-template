    "scale": {
      "3xs": { "rem": "0.146rem", "px": "2.34px", "tailwind": "0.5" },
      "2xs": { "rem": "0.236rem", "px": "3.78px", "tailwind": "1" },
      "xs": { "rem": "0.382rem", "px": "6.11px", "tailwind": "1.5" },
      "sm": { "rem": "0.618rem", "px": "9.89px", "tailwind": "2.5" },
      "md": { "rem": "1rem", "px": "16px", "tailwind": "4" },
      "lg": { "rem": "1.618rem", "px": "25.89px", "tailwind": "6" },
      "xl": { "rem": "2.618rem", "px": "41.89px", "tailwind": "10" },
      "2xl": { "rem": "4.236rem", "px": "67.78px", "tailwind": "16" },
      "3xl": { "rem": "6.854rem", "px": "109.66px", "tailwind": "28" }
