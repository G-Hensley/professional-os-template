{
  "note": "Content strategy for LinkedIn. Defines pillars, calendar, post structure, and style rules.",
  "accounts": {
    "personal": {
      "handle": "yourhandle",
      "url": "https://linkedin.com/in/yourprofile",
      "purpose": "Build professional brand, share journey, attract opportunities",
      "posting_frequency": "3x per week",
      "pillars": [
        {
          "id": "build-in-public",
          "name": "Build in Public",
          "description": "Transparent sharing of what you're building",
          "weight": 0.35,
          "content_types": [
            "Project progress updates",
            "Technical decisions and why",
            "Struggles and solutions",
            "Metrics and milestones"
          ]
        },
        {
          "id": "career-journey",
          "name": "Career Journey",
          "description": "Authentic sharing of career path and lessons",
          "weight": 0.25,
          "content_types": [
            "Job search insights",
            "Lessons from past roles",
            "Career pivots and decisions"
          ]
        },
        {
          "id": "technical-learning",
          "name": "Technical Learning",
          "description": "Share what you're learning",
          "weight": 0.20,
          "content_types": [
            "New tools and frameworks",
            "Learning resources",
            "Technical experiments"
          ]
        },
        {
          "id": "personal-stories",
          "name": "Personal Stories",
          "description": "Authentic experiences that build connection",
          "weight": 0.20,
          "content_types": [
            "Lessons from failure",
            "Moments that changed perspective",
            "The human side of being a developer"
          ]
        }
      ]
    }
  },
  "calendar": {
    "note": "Weekly posting schedule",
    "schedule": {
      "monday": { "pillar": "build-in-public", "focus": "Weekly project update" },
      "wednesday": { "pillar": "technical-learning", "focus": "Something learned" },
      "friday": { "pillar": "career-journey", "focus": "End of week reflection" }
    }
  },
  "post_structure": {
    "format": {
      "hook": "Opening line that stops the scroll",
      "body": "Main content with value or insight",
      "cta": "Call to action or engagement prompt"
    },
    "constraints": {
      "max_words": 150,
      "max_characters": 1300,
      "hashtags": "3-5 per post"
    }
  },
  "content_bank": {
    "personal": [
      {
        "pillar": "build-in-public",
        "ideas": [
          "Weekly project progress update",
          "Decision to prioritize X over Y",
          "Feature I cut and why",
          "Milestone reached"
        ]
      },
      {
        "pillar": "career-journey",
        "ideas": [
          "What I learned from current role",
          "Job search strategy that works",
          "Interview experience (anonymized)"
        ]
      },
      {
        "pillar": "technical-learning",
        "ideas": [
          "Tool that improved my workflow",
          "Concept that finally clicked",
          "Resource worth sharing"
        ]
      }
    ]
  }
}
